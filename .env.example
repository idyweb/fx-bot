# =============================================================================
# FX-BOT PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# MT5 Configuration
# -----------------------------------------------------------------------------
MT5_LOGIN=your_mt5_login_id
MT5_PASSWORD=your_mt5_password
MT5_SERVER=Exness-MT5Trial9
MT5_API_PORT=5001

# -----------------------------------------------------------------------------
# AI Agent (Gemini)
# -----------------------------------------------------------------------------
GEMINI_API_KEY=your_gemini_api_key

# -----------------------------------------------------------------------------
# Domain Configuration (Replace with your GCP DNS records)
# -----------------------------------------------------------------------------
VNC_DOMAIN=vnc.yourdomain.com
API_DOMAIN=api.yourdomain.com
DJANGO_DOMAIN=django.yourdomain.com
TRAEFIK_DOMAIN=traefik.yourdomain.com
GRAFANA_DOMAIN=grafana.yourdomain.com

# -----------------------------------------------------------------------------
# Traefik / Let's Encrypt
# -----------------------------------------------------------------------------
# Generate hashed password: htpasswd -nb admin yourpassword | sed 's/\$/\$\$/g'
# Note: Double $$ required for Docker Compose escape
TRAEFIK_USERNAME=admin
TRAEFIK_HASHED_PASSWORD=$$apr1$$xxxxxx$$xxxxxxxxxxxxxxxxxxxxxxx
ACME_EMAIL=your-email@example.com

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_DB=fx_bot
POSTGRES_USER=fx_admin
POSTGRES_PASSWORD=generate_a_strong_password_here

# -----------------------------------------------------------------------------
# Celery (Redis Broker)
# -----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# -----------------------------------------------------------------------------
# Optional: VNC Access (if needed)
# -----------------------------------------------------------------------------
CUSTOM_USER=admin
PASSWORD=your_vnc_password